# Environment variables for NEA Dashboard

# Email credentials
SENDER_EMAIL=your_email@example.com
SENDER_PASSWORD=app_password
RECIPIENT_EMAILS=addr1@example.com,addr2@example.com

# Paths used by nea_reports.py
BASE_NEA=C:\\path\\to\\NEA\\Portal
BASE_ERC=C:\\path\\to\\ERC\\OUTAGES

# Path to Tesseract executable
TESSERACT_CMD=C:\\Program Files\\Tesseract-OCR\\tesseract.exe

# Optional polling settings
POLL_FOR_REPLY=True
POLL_TIMEOUT_MIN=30
POLL_INTERVAL_SEC=10

# APScheduler timezone
SCHEDULER_TIMEZONE=Asia/Manila
